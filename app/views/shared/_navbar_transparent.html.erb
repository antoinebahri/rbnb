<div id="navbar-home" class="navbar-wagon-transparent sticky">
  <!-- Logo -->
  <%= link_to (image_tag "logo.png"), root_path, class: "navbar-wagon-brand" %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <ul class="list-inline tabs-underlined">
     <li>
      <%= link_to "Become a host", new_flat_path, class: "tab-underlined active" %>

     </li>
      <% if user_signed_in? == false %>
     <li>
      <%= link_to "Register", new_user_registration_path, class: "tab-underlined" %>
     </li>
     <li>
      <%= link_to "Log In", new_user_session_path, class: "tab-underlined" %>
     </li>
     <% end %>
    </ul>

    <!-- Profile picture with dropdown list -->
    <% if user_signed_in? %>
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <%= cl_image_tag current_user.picture, height: 400, width: 400, crop: :fill, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", data: { toggle: 'dropdown' } %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><a href="#">Profile</a></li>
          <li><a href="#">Dashboard</a></li>
          <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    </div>
    <% end %>
  </div>

  <!-- Profile picture with dropdown list -->
  <div class="navbar-wagon-item">
    <div class="dropdown">
      <img src="https://kitt.lewagon.com/placeholder/users/ssaunier" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

        <% if user_signed_in? %>
          <li><a href="#">Profile</a></li>
          <li><a href="#">Dashboard</a></li>
          <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li>
            <%= link_to "Post", new_flat_path %>
          </li>
          <li>
            <%= link_to "Register", new_user_registration_path %>
          </li>
          <li>
            <%= link_to "Login", new_user_session_path %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<!-- Dropdown appearing on mobile only -->
<div class="navbar-wagon-item hidden-md hidden-lg">
  <div class="dropdown">
    <i class="fas fa-bars dropdown-toggle" data-toggle="dropdown" role="button"></i>
    <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
      <li><a href="#">Host</a></li>
      <li><a href="#">Trips</a></li>
      <li><a href="#">Messagese</a></li>
    </ul>
  </div>
</div>
</div>
