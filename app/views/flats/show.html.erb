<div class="container">
  <div class="row">
  <div class="wrapper-show col-sm-12 col-md-8 col-md-offset-2">
    <div class="card-flat">
      <div style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.2) 50%), url('<%= cl_image_path @flat.picture %>')" class="image-show">
        <%= cl_image_tag @flat.user.picture, height: 400, width: 400, crop: :fill, id: "avatar-card-lg" %>
      </div>
      <div class="card-flat-infos">
        <div>
          <h1><%= @flat.title %></h1>
          <h2><em><%= @flat.address %></em></h2>
        </div>
        <div>
          <%= link_to 'Book', new_flat_booking_path(@flat), class: "button-rbnb" %>
        </div>
      </div>

      <div
        id="map"
        style="width: 90%;
        height: 250px;
        margin-left: 37px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>

      <h3 class="card-flat-description"> <%= @flat.description %></h3>
      <div class="card-flat-pricing">
        <h1>â‚¬ <%= @flat.price_night %></h1>
        <h2>per night</h2>
      </div>
      <div class="card-flat-link">
        <h2 style="margin-top: 5px; font-size: 20px;">
          <%= link_to "", root_path, class: "fas fa-home" %>
        </h2>
        <div class="flat-options">
          <h2>
            <%= link_to "", edit_flat_path(@flat), class: "far fa-edit" %>
          </h2>
          <%= link_to(flat_path(@flat),:data => {:confirm => "Are you sure you want to delete this flat?",:method => "delete"}) do %>
          <i class="fas fa-trash" style="margin-left: 15px;"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>
