<h1>Post your flat</h1>

<%= simple_form_for [@user, @flat] do |f| %>
  <%= f.input :title %>
  <%= f.input :city %>
  <%= f.input :address %>
  <%= f.input :picture %>
  <%= f.input :description %>
  <%= f.input :price_night %>
  <%= f.submit "POST", class: "btn btn-primary" %>
<% end %>
<br>
<%= link_to 'Back', root_path, class: "btn btn-primary" %>
