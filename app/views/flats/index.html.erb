<h4>All our apartments</h4>

<div class="card-grid">
  <div class="container-cards">
    <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <%= link_to flat_path(flat) do %>
          <div class="card">
            <div class="card-image" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path flat.picture %>');">
              <div class="card-location"><%= flat.city %></div>
              <div class="card-title"><%= flat.title %></div>
            </div>
            <div class="card-infos">
              <img src='https://kitt.lewagon.com/placeholder/users/ClaraMorgen' class="card-avatar"/>
              <div class="card-price"><%= flat.price_night %></div>
            </div>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

