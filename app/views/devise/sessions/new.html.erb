<div style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1498085245356-7c3cda3b412f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1734&q=80');">
    <div class="container">
      <div class="wrapper-new">
        <div class="form-new">
          <h1 style="color: #ff5b60;">Login</h1>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        <div class="form-actions">
          <div class="bottom">
            <%= f.button :submit, "Log in", class: "button-rbnb" %>
          </div>
        </div>
        <% end %>
        <div class="extra-login">
          <%= render "devise/shared/links" %>
          <br>
          <%= link_to 'Back', root_path %>
        </div>
      </div>
    </div>
  </div>
</div>
